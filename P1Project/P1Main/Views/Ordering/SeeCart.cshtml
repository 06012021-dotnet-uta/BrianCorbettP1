@model List<ModelsLibrary.CartItemDisplay>
@{
  ViewData["Title"] = "SeeCart";
}

<style>
  h1 {
    font-size: 2em;
  }

  h2 {
    font-size: 1em;
  }
</style>

<h1>Your cart</h1>
<hr />
<br />

@if (Model.Count == 0)
{
  <h1>There are no items in your cart.</h1>
}
else
{
  foreach (var item in Model)
  {
    <h1>@item.DisplayName</h1>
    <h2>Quantity: @item.Quantity    ---    $@item.OrderPrice</h2>
    <hr />
  }
  <h1>Cart Total: $@ViewBag.CartTotal</h1>
}


@Html.ActionLink("Keep shopping", "Inventory") |
@if (Model.Count != 0) 
{
  @Html.ActionLink("Checkout", "Checkout") <span>|</span>
}
@Html.ActionLink("Back to home", "Index", "Home")