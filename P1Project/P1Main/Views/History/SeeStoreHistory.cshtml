@model List<ModelsLibrary.StoreOrderDisplay>
@{
  ViewData["Title"] = "SeeStoreHistory";
}

<style>
  p {
    font-size: 1.5em;
  }
</style>

<h1>@ViewBag.StoreLocation order history</h1>
<hr />
<br />

@if (Model.Count == 0)
{
  <h2>No order history available.</h2>
}
else
{
  @foreach (var order in Model)
  {
    <h3>
      @Html.ActionLink($"Order {order.OrderId} made on {order.OrderDate} by {order.Username}", "SeeOrderDetails", new { orderId = order.OrderId })
    </h3>
    <p>Cost: @order.OrderCost</p>
    <hr />
  }
}

<div>
  @Html.ActionLink("Store options", "StoreOptions", "Ordering", new { storeName = ViewBag.StoreLocation })
</div>


