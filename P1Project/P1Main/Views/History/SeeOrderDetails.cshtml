@model List<ModelsLibrary.ItemOrderDetail>
@{
  ViewData["Title"] = "SeeOrderDetails";
}

<style>
  .form-style {
    display: table;
    margin: 5% auto 20px auto;
    width: 30%;
    box-shadow: black 10px 10px 10px;
    padding: 15px;
  }

  .thin-border {
    border: 1px solid black;
    border-radius: 20px;
  }

  .center {
    text-align: center;
  }

  p {
    font-size: 1.5em;
  }
</style>

<h1>Order details</h1>
<hr />
<br />

@foreach (var item in Model)
{
  <h2>@item.ItemName</h2>
  <p>Quantity: @item.QuantityOrdered    ---    $@item.ItemCost</p>
  <hr />
}
