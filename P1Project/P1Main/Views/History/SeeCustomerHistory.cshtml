@model List<ModelsLibrary.OrderDisplay>
@{
  ViewData["Title"] = "SeeCustomerHistory";
}

<style>
  p {
    font-size: 1.5em;
  }
</style>

<h1>@ViewBag.CustomerUsername order history</h1>
<p>@Html.ActionLink("Back to search", "Search", "CustomerSearch")</p>
<hr />
<br />

@if (Model.Count == 0)
{
  <h2>No order history available.</h2>
}
else
{
  @foreach (var order in Model)
  {
    <h3>
      @Html.ActionLink($"Order {order.OrderId} made on {order.OrderDate} from {order.StoreLocation}", "SeeOrderDetails", new { orderId = order.OrderId })
    </h3>
    <p>Cost: $@order.OrderCost</p>
    <hr />
  }
}
