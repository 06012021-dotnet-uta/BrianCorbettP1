@model List<ModelsLibrary.OrderDisplay>
@{
  ViewData["Title"] = "SeeCustomerHistory";
}

<h1>@ViewBag.CustomerUsername order history</h1>

@if (Model.Count == 0)
{
  <h2>No order history available.</h2>
}
else
{
  @foreach (var order in Model)
  {
    <h2>
      <a class="navbar-brand" asp-route-orderId="@order.OrderId" asp-action="SeeOrderDetails">
        Order @order.OrderId made on @order.OrderDate from @order.StoreLocation
      </a>
    </h2>
    <h3>Cost: @order.OrderCost</h3>
    <hr />
  }
}
